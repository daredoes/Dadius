x+=2 //MAKE THE PLAYER FOLLOW THE VIEW BY DEFAULT IF NO BUTTON IS PRESSED

//RESET FIRING TO 0 BEFORE CHECKING CONTROLS TO SEE IF ITS PRESSED AGAIN
fire = 0

//KEYBOARD CONTROLS

if(obj_controls.p1Controller = false)
{
    //MOVEMENT
    if(keyboard_check(ord(obj_controls.p1Up)))
    {
        y = y-moveSpeed
    }
    if(keyboard_check(ord((obj_controls.p1Down))))
    {
        y = y+moveSpeed
    }
    if(keyboard_check(ord((obj_controls.p1Left))))
    {
        x = x-moveSpeed
    }
    if(keyboard_check(ord((obj_controls.p1Right))))
    {
        x = x+moveSpeed
    }
    
    //FIRE WEAPONS
    if(keyboard_check(ord((obj_controls.p1Shoot))))
    {
        fire = 1
    }
    
    //DEVELOPER CONTROLS
    if global.devControlsActive
        {
        if(keyboard_check_pressed(vk_space))
            {
            moveSpeed += 5;
            }
        }
}
//GAMEPAD CONTROLS

if(gamepad_is_connected(0))
{
    if abs(gamepad_axis_value(0,gp_axislv) &gt; .2)
    y += moveSpeed * gamepad_axis_value(0,gp_axislv)

    if abs(gamepad_axis_value(0,gp_axislh) &gt; .2)
    x += moveSpeed * gamepad_axis_value(0,gp_axislh)
}

//JOYSTICK CONTROLS

if joystick_exists(1)
    {
    if abs(joystick_xpos(1)) &gt; .1
    x += joystick_xpos(1) * moveSpeed
    if abs(joystick_ypos(1)) &gt; .1
    y += joystick_ypos(1) * moveSpeed
    if joystick_check_button(1,1)
        {
        fire = 1
        }
    }
        
//UPGRADE CYCLER

if(upgrades &gt; maxUpgrades)
{
    upgrades = 0;
}

//MOVEMENT BOUNDARIES

if y &lt; view_yview[0] + sprite_height/2
